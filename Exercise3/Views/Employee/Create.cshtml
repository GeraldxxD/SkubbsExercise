@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h5>Create Employee</h5>
    </div>
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="form-label" for="">First Name</label>
                    <input type="text" class="form-control" placeholder=".." id="create-fname">
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label class="form-label" for="">Last Name</label>
                    <input type="text" class="form-control" placeholder=".." id="create-lname">
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label class="form-label" for="">Date of Birth</label>
                    <input type="date" class="form-control" id="create-dob">
                </div>
            </div>
            <div class="col-md-12">
                <button type="button" class="btn btn-secondary" id="btn-create">Create</button>
            </div>
        </div>

    </div>
</div>